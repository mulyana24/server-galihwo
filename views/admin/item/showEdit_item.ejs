<div class="tab-pane fade show active" id="edit-item" role="tabpanel" aria-labelledby="profile-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <!-- form -->
            <form action="/admin/item/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="title" value="<%= item.title %>"
                        placeholder="Enter title" required>
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" class="form-control" id="price" name="price" value="<%= item.price %>">
                </div>
                <div>
                    <label for="village">Village</label>
                    <input type="text" class="form-control" id="village" name="village" value="<%= item.village %>"
                        placeholder="Enter village" required>
                </div>
                <div class="form-group">
                    <label for="categoryId">Category</label>
                    <select class="form-control" name="categoryId">
                        <option value="<%= item.categoryId.id %>"> <%= item.categoryId.name %> </option>
                        <% for(let i = 0; i < category.length; i++) {%>
                        <option value=" <%= category[i].id %>"><%= category[i].name %></option>
                        <%}%>
                    </select>
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" class="form-control" id="image" name="image" multiple >
                </div>
                <div class="form-group">
                    <label for="about">Description</label>
                    <textarea class="form-control" name="about"> <%= item.description %> </textarea>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>