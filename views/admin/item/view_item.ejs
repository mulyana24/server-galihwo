<!-- Header -->
<!-- memanggil halaman header di folder partials -->
<%- include('../../partials/header.ejs') %>
<!-- end header -->

<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    <%- include('../../partials/sidebar.ejs') %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <!-- Navbar -->
            <!-- Topbar -->
            <%- include('../../partials/navbar.ejs') %>
            <!-- End of Topbar -->
            <!-- End of Navbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">
                <%- include('../../partials/message.ejs') %>
                <!-- Page Heading -->
                <h1 class="h3 mb-4 text-gray-800">Item</h1>
                <!-- End Heading -->
                <% if(action == 'view') {%>

                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#showItem" role="tab"
                            aria-controls="home" aria-selected="true">Show Item</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#addItem" role="tab"
                            aria-controls="profile" aria-selected="false">Add Item</a>
                    </li>

                </ul>
                <div class="tab-content" id="myTabContent">
                    <%- include('showTable_item.ejs') %>
                    <%- include('add_item.ejs') %>
                </div>
                <%} else if(action == 'show image') {%>
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#show-image" role="tab"
                            aria-controls="home" aria-selected="true">Show Image</a>
                    </li>

                </ul>
                <div class="tab-content" id="myTabContent">
                    <%- include('showImage_item.ejs') %>

                </div>
                <% } else { %>
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#edit-item" role="tab"
                            aria-controls="home" aria-selected="true">Edit Item</a>
                    </li>

                </ul>
                <div class="tab-content" id="myTabContent">
                    <%- include('showEdit_item.ejs') %>

                </div>
                <%}%>



            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%- include('../../partials/footer.ejs') %>
                <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

        </div>
        <!-- End of Page Wrapper -->

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>

        <!-- Logout Modal-->
        <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">Ã—</span>
                        </button>
                    </div>
                    <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        <a class="btn btn-primary" href="login.html">Logout</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bootstrap core JavaScript-->
        <%- include('../../partials/javascript.ejs') %>

        <!-- script cdn ckEditor -->
        <script>
            CKEDITOR.replace('about');
        </script>